{
  "name": "tie-line-manager",
  "version": "1.4.2",
  "description": "Connect two broadcast routers and manage tie-lines between them as one virtual router",
  "main": "src/main.js",
  "scripts": {
    "start": "unset ELECTRON_RUN_AS_NODE && electron .",
    "dev": "unset ELECTRON_RUN_AS_NODE && electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --mac --win"
  },
  "keywords": [
    "blackmagic",
    "videohub",
    "swp08",
    "router",
    "tie-line",
    "broadcast",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.videohub.tielinemanager",
    "productName": "Tie-Line Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "icons/**/*",
      "build/icon.png"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": "Video Walrus Ltd. (RC6P9CGHN7)",
      "notarize": false,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12"
  }
}
